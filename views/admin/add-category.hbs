<style>
    .imggmi {
        display: none;
    }
</style>

<main id="main" class="main">
    <div class="pagetitle">
        <h1><b><i class="bi bi-folder-plus"></i></b> Add Category </i></h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin/dash">Home</a></li>
                <li class="breadcrumb-item"><a href="/admin/product-category">Category Management</a> </li>
                <li class="breadcrumb-item active">Add Category</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-6 ">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">New Category</h5>

                        <!-- Horizontal Form -->
                        <form action="/admin/addNewCategory" method="post" enctype="multipart/form-data">
                            <div class="row mb-3">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Category Name</label>
                                <div class="col-sm-10">
                                    <input type="text" name="category" class="form-control" id="inputText">
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputEmail3" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">

                                    <textarea name="Description" rows="5" class="form-control"
                                        id="inputText"></textarea>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <label for="inputNumber" class="col-sm-2 col-form-label">Image Upload</label>
                                <div class="col-sm-10">
                                    <input type="file" class="form-control" name="image" required>
                                </div>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <button type="reset" class="btn btn-secondary">Reset</button>
                            </div>
                        </form><!-- End Horizontal Form -->

                    </div>
                </div>



            </div>


        </div>
    </section>

    <div class="form-group  m-0 p-0 mt-4">
        <label for="imgFile1">Upload 3 Product Images</label>
        <input type="file" class="form-control form-control-lg ml-3" id="imgFile1" accept="image/*" name="image"
            style="width:50%;" required>
        <img src="" id="image-1" alt="" class="imggmi" style="height:150px;">
    </div>

    <div class="row">
        <div class="d-none d-sm-none d-md-block col-md-3"></div>
        <div class="col-md-6">
            <div style="display:flex">
                <div id="screen1" class="imggmi image-container mt-2" style="height: 30rem;"></div> <br>
            </div>
            <div class="d-flex justify-content-end"> <button type="button"class="btn btn-sm bg-primary text-white mt-1 mb-1" id="crop-1" style=" margin-top: 0px;  display: none; width: 100px;">Crop</button>
            </div>
        </div>
    </div>

</main><!-- End #main -->


<script>
    const imagebox1 = document.getElementById('screen1')
    const crop_btn1 = document.getElementById('crop-1')
    const input1 = document.getElementById('imgFile1')
    document.getElementById("submitBtn").disabled = false;

    input1.addEventListener('change', () => {
        const img_data1 = input1.files[0]
        const url1 = URL.createObjectURL(img_data1)
        imagebox1.innerHTML = `<img src="${url1}" id="img1" style="width:100%;">`
        const img1 = document.getElementById('img1')
        document.getElementById("submitBtn").disabled = true;
        document.getElementById('screen1').style.display = 'block'
        document.getElementById('crop-1').style.display = 'block'


        const cropper1 = new Cropper(img1, {
            autoCropArea: 1,
            viewMode: 1,
            scalable: false,
            zoomable: false,
            movable: false,
            minCropBoxWidth: 50,
            minCropBoxHeight: 50,
            aspectRatio: 1 / 1,
        })

        crop_btn1.addEventListener('click', () => {

            cropper1.getCroppedCanvas().toBlob((blob) => {
                let fileInputElement1 = document.getElementById('imgFile1');
                let file1 = new File([blob], img_data1.name, { type: "image/*", lastModified: new Date().getTime() });
                let container1 = new DataTransfer();
                container1.items.add(file1);
                fileInputElement1.files = container1.files;
                document.getElementById('image-1').src = URL.createObjectURL(fileInputElement1.files[0])
                document.getElementById('screen1').style.display = 'none'
                document.getElementById('crop-1').style.display = 'none'
                document.getElementById("submitBtn").disabled = false;
                document.getElementById('image-1').style.display = 'block'
            })
        })

    })
</script>