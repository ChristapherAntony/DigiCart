<div class="cart-main-area pt-50 pb-120 ">
    <div class="container" style="margin-left: 100px; margin-right: 100px;">
        <h3 class="cart-page-title">Your cart items [{{products.length}}] </h3> 
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-content table-responsive cart-table-content">
                    <table>
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Product Name</th>
                                <th>Until Price</th>
                                <th>Qty</th>
                                <th>Subtotal</th>
                                <th>action</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each products}}
                            <tr>

                                <td class="product-thumbnail">
                                    <a href="/details/{{this.product._id}}"><img src="images/product-img/{{this.product.image1}}" alt=""
                                            width="100"></a>
                                </td>
                                <td class="product-name"><a href="/details/{{this.product._id}}">{{this.product.title}}</a></td>
                                <td class="product-price-cart"><span class="amount">Rs.
                                        {{this.product.offerPrice}}</span>
                                </td>

                                <td class="product-quantity pro-details-quality">
                                    {{!-- <div class="cart-plus-minus">
                                        <input class="cart-plus-minus-box" type="text" name="qtybutton"
                                            value="{{this.quantity}}">
                                    </div> --}}


                                    <div>
                                        <button class="btn btn-light" style="display: inline-block;" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.offerPrice}}',-1)">-</button>
                                        <span style="display: inline-block; width: 20px; ;"  id="{{this.product._id}}">{{this.quantity}}</span>
                                        <button class="btn btn-light" style="display: inline-block;"  onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../userId}}','{{this.product.offerPrice}}', 1)">+</button>
                                    </div>





                                    {{!-- <button>-</button><span>10</span><button>+</button> --}}


                                </td>
                                <td class="product-subtotal"> Rs.
                                    <span id="{{this.product.offerPrice}}">{{this.productTotal}}</span>
                                </td>
                                <td class="product-remove">
                                    <button class="btn btn-outline-danger" onclick="removeCartProduct('{{this._id}}','{{this.product._id}}')">X</button>
                                </td>
                                {{!-- <td class="product-remove">
                                    <a href="#"><i class="bi bi-x-lg"></i></a>
                                </td> --}}
                            </tr>
                            {{/each}}

                        </tbody>
                    </table>

                </div>
