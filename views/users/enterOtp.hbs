<div class="login-register-area pt-20 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a class="active" data-toggle="tab" href="#lg1">
                            <h4>OTP Verification</h4>
                        </a>

                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="/verifyOtp" method="post">
                                        <label for="">Please Enter the OTP here to Login </label>
                                        <input type="text" name="otp" placeholder="Enter 6 Digit OTP">


                                        {{#if otpError}}
                                        <span class="text-danger font-weight-bold disappear">{{'otpError'}}</span>
                                        {{/if}}
                                        <div class="button-box">
                                            <div class="login-toggle-btn">
                                                <button type="submit">Send OTP</button>
                                                <a href="/login-register">Login With Password</a>
                                            </div>

                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>