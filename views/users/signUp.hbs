<div class="login-register-area pt-20 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a data="tab" href="/login-register">
                            <h4> login </h4>
                        </a>
                        <a class="active" data-toggle="tab" href="#">
                            <h4> sign up </h4>
                        </a>
                    </div>
                    <div class="tab-content">
                        <div id="lg1" class="tab-pane active">
                            <div class="login-form-container">
                                <div class="login-register-form">
                                    <form action="/signUp" method="post">
                                        <input type="text" name="UserName" placeholder="Name">
                                        <input name="UserEmail" placeholder="Email" type="Email">
                                        <input type="text" name="MobileNo" placeholder="Mobile Number">
                                        <input type="password" name="Password" placeholder="Password">
                                        <input type="password" placeholder="Conform Password">
                                        <div class="button-box">
                                            <button type="submit">Register</button>

                                            {{#if emailError}}
                                            <span class="text-danger pl-5 disappear" >{{'emailError'}}</span>
                                            {{/if}}
                                            
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>